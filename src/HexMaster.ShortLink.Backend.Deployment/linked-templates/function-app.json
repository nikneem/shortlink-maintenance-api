{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "functionsAppServicePlan": "shortlink-test-resolve-plan",
    "functionsWebApp": "shortlink-test-resolve-app",
    "storageShareName": "resolve-function"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('functionsAppServicePlan')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic",
        "size": "Y1",
        "family": "Y",
        "capacity": 0
      },
      "kind": "functionapp",
      "properties": {
        "perSiteScaling": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('functionsWebApp')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlan'))]"
      ],
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(variables('functionsAppServicePlan'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(variables('functionsAppServicePlan'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlan'))]",
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 1536,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": false,
        "redundancyMode": "None"
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2018-11-01",
          "location": "[resourceGroup().location]",
          "dependsOn": [],
          "properties": {
            "WEBSITE_RUN_FROM_PACKAGE": "1",
            "FUNCTIONS_WORKER_RUNTIME": "dotnet",
            "FUNCTIONS_EXTENSION_VERSION": "~3",
            "WEBSITE_CONTENTSHARE": "[variables('storageShareName')]"
          }
        },
        {
          "type": "hostNameBindings",
          "apiVersion": "2018-11-01",
          "name": "[concat( variables('functionsWebApp'), '.azurewebsites.net')]",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('functionsWebApp'))]"
          ],
          "properties": {
            "siteName": "[variables('functionsWebApp')]",
            "hostNameType": "Verified"
          }
        }
      ]
    }
  ],
  "outputs": {}
}

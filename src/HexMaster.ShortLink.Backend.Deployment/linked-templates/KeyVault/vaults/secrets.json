{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": ["dev", "test", "acc", "prod"]
    },
    "systemName": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "value": {
      "type": "securestring"
    }

  },
  "functions": [
    {
      "namespace": "eke",
      "members": {
        "keyVaultReference": {
          "parameters": [
            {
              "name": "keyVaultName",
              "type": "string"
            },
            {
              "name": "secretName",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/', parameters('secretName'), '/)')]"
          }
        }
      }
    }
  ],
  "variables": {
    "apiVersionVar": "[providers('Microsoft.KeyVault', 'vaults').apiVersions[0]]",
    "keyvault-name": "[concat(parameters('systemName'), '-', parameters('environment'), '-keyvlt')]"
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(variables('keyvault-name'), '/', parameters('name'))]",
      "apiVersion": "[variables('apiVersionVar')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "attributes": {
          "enabled": true
        },
        "value": "[parameters('value')]"
      }
    }
  ],
  "outputs": {
    "KeyVaultReference": {
      "type": "object",
      "value": {
          "[parameters('name')]": "[eke.keyVaultReference(variables('keyvault-name'), parameters('name'))]"
      }
    }
  }
}
